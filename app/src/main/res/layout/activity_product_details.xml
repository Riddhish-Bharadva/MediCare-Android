<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductDetails">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:layout_centerHorizontal="true" >

            <ImageView
                android:id="@+id/ProductImage"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:padding="10dp"
                tools:srcCompat="@drawable/ic_launcher_background" />

            <Button
                android:id="@+id/AddToCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:background="@drawable/button_shape"
                android:text="Add to Cart"
                android:onClick="AddToCart"
                android:textColor="@color/colorButtonText" />

            <TextView
                android:id="@+id/ProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:layout_below="@+id/ProductImage"
                android:text="Product Name"/>

            <TextView
                android:id="@+id/AvailableQuantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_below="@+id/ProductName"
                android:text="Available Quantity"/>

            <TextView
                android:id="@+id/PrescriptionRequired"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_below="@+id/AvailableQuantity"
                android:text="Prescription Required"/>

            <TextView
                android:id="@+id/Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_below="@+id/PrescriptionRequired"
                android:text="Product Description"/>

            <TextView
                android:id="@+id/ProductPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_below="@+id/Description"
                android:text="Price"/>

            <TextView
                android:id="@+id/Ingredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_below="@+id/ProductPrice"
                android:text="Ingredients"/>

            <TextView
                android:id="@+id/Dosage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_below="@+id/Ingredients"
                android:text="Dosage"/>

            <TextView
                android:id="@+id/ProductLife"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginBottom="15dp"
                android:layout_below="@+id/Dosage"
                android:text="Product Life"/>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>